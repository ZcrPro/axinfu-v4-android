<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
            android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:padding="@dimen/s10"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/banner_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="@dimen/s5"
                        android:text="1111"
                        android:id="@+id/banner_detail_title"
                        android:textColor="@color/axf_text_title_gray"
                        android:textSize="@dimen/text_size_h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/banner_time"
                        android:layout_marginBottom="@dimen/s10"
                        android:layout_marginTop="@dimen/s10"
                        android:text="11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="13"
                        android:id="@+id/banner_content"
                        android:textColor="@color/axf_text_title_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>