<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/axf_bg_blue"
    android:gravity="center"
    android:orientation="vertical">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:direction="both">
        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/s5">

                    <FrameLayout
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/s200">

                        <FrameLayout
                            android:id="@+id/banner_default_view"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/s200"
                            android:layout_gravity="center"
                            android:background="@mipmap/home_bg"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/sun_def"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/s20"
                                android:background="@mipmap/home_sun" />

                            <RelativeLayout
                                android:id="@+id/ani3_def"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/s50"
                                android:layout_marginBottom="-225dp">

                                <ImageView
                                    android:id="@+id/plant4_def"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/local_def"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="-15dp"
                                    android:layout_marginBottom="@dimen/s10"
                                    android:background="@mipmap/plant4" />

                                <ImageView
                                    android:id="@+id/plant3_def"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginRight="-20dp"
                                    android:background="@mipmap/plant3" />

                                <View
                                    android:id="@+id/local_def"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/loufang_def"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="-250dp" />

                            <RelativeLayout
                                android:id="@+id/tree_view_def"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom">

                                <ImageView
                                    android:id="@+id/plant_def"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentBottom="true"
                                    android:background="@mipmap/plant1_left" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:background="@mipmap/plant1_right" />
                            </RelativeLayout>


                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/banner_view"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />

                        <FrameLayout
                            android:id="@+id/fl_banner_bg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/s200"
                            android:background="@mipmap/home_bg">

                            <ImageView
                                android:id="@+id/ani5"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="-210dp"
                                android:background="@mipmap/building3" />

                            <ImageView
                                android:id="@+id/sun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/s20"
                                android:background="@mipmap/home_sun" />

                            <RelativeLayout
                                android:id="@+id/ani3"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/s50"
                                android:layout_marginBottom="-225dp">

                                <ImageView
                                    android:id="@+id/building"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="@dimen/s30"
                                    android:background="@mipmap/building" />

                                <ImageView
                                    android:id="@+id/plant4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/local"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="-15dp"
                                    android:layout_marginBottom="@dimen/s10"
                                    android:background="@mipmap/plant4" />

                                <ImageView
                                    android:id="@+id/plant3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginRight="-20dp"
                                    android:background="@mipmap/plant3" />

                                <View
                                    android:id="@+id/local"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/ani4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="90dp"
                                android:layout_marginBottom="-225dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="20dp"
                                    android:background="@mipmap/building1" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/local1"
                                    android:background="@mipmap/flag" />

                                <View
                                    android:id="@+id/local1"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/loufang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|right"
                                android:layout_marginRight="@dimen/s10"
                                android:layout_marginBottom="-250dp"
                                android:background="@mipmap/school_bighouse" />

                            <RelativeLayout
                                android:id="@+id/tree_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom">

                                <ImageView
                                    android:id="@+id/plant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentBottom="true"
                                    android:background="@mipmap/plant1_left" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:background="@mipmap/plant1_right" />
                            </RelativeLayout>
                        </FrameLayout>
                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/titleView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/s40">

                        <ImageView
                            android:id="@+id/home_qr"
                            android:layout_width="@dimen/s35"
                            android:layout_height="@dimen/s35"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/s10"
                            android:src="@mipmap/code_home" />

                        <RelativeLayout
                            android:id="@+id/home_msg_view"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_alignTop="@+id/tv_select_school"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="11dp"
                            android:layout_marginRight="11dp">

                            <ImageView
                                android:id="@+id/home_msg"
                                android:layout_width="@dimen/s35"
                                android:layout_height="@dimen/s35"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerHorizontal="true"
                                android:src="@mipmap/icon_nav_message" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_select_school"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/s10"
                            android:text="正在加载学校...."
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_m" />

                        <RelativeLayout
                            android:id="@+id/msg_alert"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_alignTop="@+id/home_msg_view"
                            android:layout_alignRight="@+id/home_msg_view"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="-5dp"
                            android:background="@mipmap/msg_point"
                            android:visibility="invisible">

                            <TextView
                                android:id="@+id/msg_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"
                                android:textSize="8sp" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/clickChangeSchool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-10dp"
                        android:text="点击更换学校"
                        android:textColor="@color/white"
                        android:textSize="@dimen/s10" />


                    <LinearLayout
                        android:id="@+id/ll_buss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/banner"
                        android:layout_marginTop="-20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/s10"
                            android:layout_marginRight="@dimen/s10"
                            android:layout_weight="1"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/upqr_view"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/s20">

                                    <ImageView
                                        android:layout_width="@dimen/s40"
                                        android:layout_height="@dimen/s40"
                                        android:src="@mipmap/home_wallet_logo" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/s5"
                                        android:text="安心零钱包"
                                        android:textSize="@dimen/s11" />

                                    <TextView
                                        android:id="@+id/eaccount_many"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/s5"
                                        android:textColor="@color/axf_common_blue"
                                        android:textSize="@dimen/s10" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_ecard"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/s20">

                                    <ImageView
                                        android:id="@+id/iv_ecard_or_qr"
                                        android:layout_width="@dimen/s40"
                                        android:layout_height="@dimen/s40"
                                        android:src="@mipmap/card_icon_new" />

                                    <TextView
                                        android:id="@+id/tv_ecard_or_qr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="@dimen/s5"
                                        android:text="校园一卡通"
                                        android:textSize="@dimen/s11" />

                                    <TextView
                                        android:id="@+id/tv_ecard_balance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/s5"
                                        android:singleLine="true"
                                        android:textColor="@color/axf_common_blue"
                                        android:textSize="@dimen/s10" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_fee"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/s20">

                                    <ImageView
                                        android:layout_width="@dimen/s40"
                                        android:layout_height="@dimen/s40"
                                        android:src="@mipmap/payment_icon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/s5"
                                        android:text="缴费"
                                        android:textSize="@dimen/s11" />

                                    <TextView
                                        android:id="@+id/tv_fee_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/s5"
                                        android:textColor="@color/axf_common_blue"
                                        android:textSize="@dimen/s10" />

                                </LinearLayout>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_home_gg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/s10"
                    android:layout_marginRight="@dimen/s10"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_bank_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/s5"
                        android:layout_weight="0.5"
                        android:background="@drawable/home_open_ocp_bg"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_bind_card"
                            android:layout_width="@dimen/s50"
                            android:layout_height="@dimen/s50"
                            android:padding="@dimen/s10"
                            android:src="@mipmap/home_add_card" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_bind_card_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="添加银行卡"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_bind_card_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/axf_light_gray"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/s20"
                            android:src="@mipmap/next_arrow_icon" />

                    </LinearLayout>

                    <View
                        android:id="@+id/center_view"
                        android:layout_width="@dimen/s10"
                        android:layout_height="@dimen/s20"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_ocp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/s5"
                        android:layout_weight="0.5"
                        android:background="@drawable/home_open_ocp_bg"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_bind"
                            android:layout_width="@dimen/s50"
                            android:layout_height="@dimen/s50"
                            android:padding="@dimen/s10"
                            android:src="@mipmap/home_open_ocp_logo" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_bind_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开通一码通"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_bind_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="认证享优惠"
                                android:textColor="@color/axf_light_gray"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/s20"
                            android:src="@mipmap/next_arrow_icon" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/s10"
                    android:layout_marginRight="@dimen/s10"
                    android:background="@color/axf_bg_blue"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/s35"
                        android:background="@drawable/home_grid_shape">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/s20"
                            android:text="更多服务"
                            android:textColor="@color/axf_text_content_gray"
                            android:textSize="15sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:descendantFocusability="blocksDescendants">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/home_grid_bg"
                            android:padding="@dimen/s5" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
